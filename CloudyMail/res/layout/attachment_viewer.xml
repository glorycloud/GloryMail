<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="0dp">
	<RelativeLayout android:id="@+id/attachPreviewProgressLayout"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_weight="1">
		<WebView android:id="@+id/previewView" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1"
			 />
		<!-- android:layout_marginBottom="5dp" -->
		<ProgressBar android:id="@+id/attachPreviewProgressBar"
			style="@android:style/Widget.ProgressBar.Inverse"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerInParent="true" />
	</RelativeLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/white"
	    android:gravity="bottom">
	    <!-- android:text="@string/last"
			android:textColor="@drawable/white" -->

	    <ImageButton
	    	android:id="@+id/backImgBtn"
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			android:layout_weight="0.25"
			android:src="@drawable/roll_back"
			android:background="@drawable/buttonselector">
		</ImageButton>

		 <ImageButton
	    	android:id="@+id/jumpImgBtn"
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			android:layout_weight="0.25"
			android:src="@drawable/gojump"
			android:background="@drawable/buttonselector">
		</ImageButton>
		<Button 
		    android:id="@+id/pageFlagBtn"
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			android:layout_weight="0.25"
			android:text="1"
			android:textSize="18sp"
			android:background="@drawable/btn_normal_statue_bg"
		    />
		<ImageButton
	    	android:id="@+id/fowardImgBtn"
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			android:layout_weight="0.25"
			android:src="@drawable/roll_foward"
			android:background="@drawable/buttonselector">
		</ImageButton>
		
	</LinearLayout>
</LinearLayout>
