<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
     >

    <Button
        android:id="@+id/endTimePickerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/timeprofile"/>

    <Button
        android:id="@+id/startTimePickerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/endTimePickerBtn"
        android:layout_alignBottom="@+id/endTimePickerBtn"
        android:layout_alignParentLeft="true"
        android:background="@drawable/timeprofile"
         />

    <CheckBox
        android:id="@+id/timePickerCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:focusable="false"
		android:focusableInTouchMode="false"
        android:layout_marginRight="12dp" 
        android:layout_centerVertical="true"
        />
    
    <TextView
        android:id="@+id/muteStartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:layout_below="@id/endTimePickerBtn"
        android:gravity="top"
         android:text="07:20" 
        />

    <TextView
        android:id="@+id/muteEndText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="07:20" 
        android:gravity="top"
		android:layout_below="@id/startTimePickerBtn"
        />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/endTimePickerBtn"
        android:layout_centerVertical="true"
        android:src="@drawable/mutetimeline" />

</RelativeLayout>