<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RadioButton android:id="@+id/newAttachRadio"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:focusable="false"
          android:paddingLeft="5dp"
          android:button="@drawable/btn_radio"/>
    <TextView android:id="@+id/newAttachFromTxt" 
			android:text=""  
			android:ellipsize="end"
			android:singleLine="true"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:gravity="left"
			android:layout_toRightOf="@id/newAttachRadio"
			android:paddingLeft="5dp"
			android:textColor="@color/black"></TextView>
    <TextView android:id="@+id/newAttachdateTxt"
			android:text="" 
			android:singleLine="true"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/newAttachFromTxt"     
			android:gravity="right"
			android:paddingRight="5dp"
			android:layout_alignParentRight="true"
			android:textColor="@color/black"></TextView>
	<TextView android:id="@+id/newAttachInfoText"
		android:layout_width="wrap_content"
		android:textColor="@color/black"
		android:paddingLeft="2dp"
		android:paddingRight="5dp"
		android:layout_margin="2dip" android:layout_height="wrap_content"
		android:text="Item" android:textSize="18sp"
		android:layout_below="@id/newAttachFromTxt"
		android:layout_toRightOf="@id/newAttachRadio">
	</TextView>
	<TextView android:id="@+id/newAttachPath"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:text="Item"
		android:textColor="@color/gray"
		android:textSize="14sp" 
		android:paddingLeft="5dp"
		android:layout_below="@id/newAttachInfoText"
		android:layout_toRightOf="@id/newAttachRadio">
	</TextView>
