<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="bottom">
	    <!-- android:text="@string/last"
			android:textColor="@drawable/white" -->
	    <ImageButton
	    	android:id="@+id/last"
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			android:layout_weight="0.25"
			android:src="@drawable/roll_back"
			android:background="@drawable/buttonselector">
		</ImageButton>
		<ImageButton
	    	android:id="@+id/replyMail"
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			android:text="@string/replyMail"
			android:textColor="@drawable/white"
			android:layout_weight="0.25"
			android:src="@drawable/replyall"
			android:background="@drawable/buttonselector">
		</ImageButton>
		<ImageButton
	    	android:id="@+id/dseleteMail"
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			android:text="@string/dseleteMail"
			android:textColor="@drawable/white"
			android:layout_weight="0.25"
			android:src="@drawable/trash_recyclebin"
			android:background="@drawable/buttonselector">
		</ImageButton>
		<!-- android:text="@string/nextMail"
			android:textColor="@drawable/white" -->
		<ImageButton
	    	android:id="@+id/next"
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			
			android:layout_weight="0.25"
			android:src="@drawable/roll_foward"
			android:background="@drawable/buttonselector">
		</ImageButton>
	</LinearLayout>
</LinearLayout>
